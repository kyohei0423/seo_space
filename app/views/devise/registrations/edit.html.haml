.container
  = form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: { class: "user-new"} do |f|
    = devise_error_messages!
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .field.row.user-name.col-md-10
            = f.text_field :nickname, autofocus: true, placeholder: "New Nickname"
          .field.user-image.col-md-2.image-upload
            %button.btn.btn-primary Change Image
            = f.file_field :avatar
          .field.row.user-email.col-md-12
            = f.email_field :email, autofocus: true, placeholder: "New Email Address"
          .field.row.user-name.col-md-12
            = f.text_field :work, autofocus: true, placeholder: "Work"
          .field.row.user-name.col-md-12
            = f.text_area :profile, autofocus: true, placeholder: "Profile"
      .actions.row.user-btn
        = f.submit "Update", class: "btn btn-lg btn-primary btn-block"
