.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to image_tag(@prototype.user.avatar, class: "media-object"), "#"
        .media-body
          %h4.media-heading
            = @prototype.title
          .proto-user
            = link_to "by #{@prototype.user.nickname}", "#"
            %span.degree
              = @prototype.user.profile
    .col-md-6.clearfix
      .likes-box
        = render partial: "likes/like", locals: { prototype: @prototype, like: @like }
  .row
    .col-md-9
      = image_tag @prototype.images.first.image, class: "img-responsive"
    .col-md-3
      %ul.proto-sub-list.list-group
        = render partial: "sub_image", collection: @prototype.images.sub
  .row.proto-description
    .col-md-3
      %h4
        Catch Copy
      %p
        = @prototype.catch_copy
    .col-md-6
      %h4
        Concept
      %p
        = @prototype.concept
  .row.proto-comments#comment_area
    = render partial: "comments", locals: { prototype: @prototype, comments: @prototype.comments, new_comment: @comment }
