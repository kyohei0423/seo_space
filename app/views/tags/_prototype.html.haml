.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.images.main.first.image), prototype_path(prototype)

    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          = link_to "by #{prototype.user.nickname}", user_path(prototype.user)
        .proto-posted
          = prototype.created_at.strftime("%b %d")
      %ul.proto-tag-list.list-inline
        = render partial: "tag", collection: prototype.tags
